<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Scatch-Shop</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root { --ring: 230 96% 62%; }
    body { font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; }
    .glass { background: rgba(255,255,255,0.7); backdrop-filter: blur(10px); }
  </style>
</head>

<%- include('./partials/header') %>

<% if(success.length > 0){ %>
  <div class="fixed top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-blue-500 z-50">
    <span class="inline-block text-white"><%= success %></span>
  </div>
<% } %>

<div class="w-full min-h-screen">
  <main class="px-4 sm:px-6 lg:px-10 py-10">
    <div class="flex flex-col lg:flex-row gap-6 lg:gap-10">
      
      <!-- Sidebar (responsive: collapses on small screens) -->
      <div class="w-full lg:w-64 bg-white shadow-md p-6 space-y-6 rounded-md">
        <div class="flex items-center justify-between lg:justify-start gap-2">
          <h3 class="font-semibold">Sort by</h3>
          <form action="/shop">
            <select class="border px-2 py-1 rounded w-full lg:w-auto" name="sortby">
              <option value="popular">Popular</option>
              <option value="newest">Newest</option>
            </select>
          </form>
        </div>

        <div class="flex flex-col mt-6 space-y-2">
          <a class="hover:underline" href="">New Collection</a>
          <a class="hover:underline" href="">All Products</a>
          <a class="hover:underline" href="">Discounted Products</a>
        </div>

        <div class="mt-8 space-y-2">
          <span class="font-semibold">Filter by:</span>
          <a class="block hover:underline" href="">Availability</a>
          <a class="block hover:underline" href="">Discount</a>
        </div>
      </div>

      <!-- Products -->
      <div class="w-full flex flex-col gap-6">
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6">
          <% products.forEach(function(product){ %>
            <div class="rounded-xl shadow overflow-hidden bg-white hover:shadow-lg transition">
              
              <!-- Product Image -->
              <div class="w-full h-40 sm:h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                <img class="h-32 sm:h-48 object-contain"
                  src="data:image/png;base64,<%= product.image.toString('base64') %>"
                  alt="">
              </div>
              
              <!-- Product Info -->
              <div class="flex justify-between items-center px-4 py-3 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                <div>
                  <h3 class="font-semibold text-sm sm:text-base"><%= product.name %></h3>
                  <h4 class="text-xs sm:text-sm">â‚¹ <%= product.price %></h4>
                </div>
                <a class="w-7 h-7 sm:w-8 sm:h-8 flex items-center justify-center rounded-full bg-white shadow hover:scale-105 transition"
                   href="/addtocart/<%= product._id %>">
                  <i class="ri-add-line"></i>
                </a>
              </div>

            </div>
          <% }) %>
        </div>
      </div>

    </div>
  </main>
</div>

<%- include('./partials/footer') %>
