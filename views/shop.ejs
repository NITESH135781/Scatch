<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Scatch-Shopet</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root { --ring: 230 96% 62%; }
    body { font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji'; }
    /* Glass effect helper */
    .glass { background: rgba(255,255,255,0.7); backdrop-filter: blur(10px); }
  </style>
</head>
<%- include('./partials/header') %>
    <% if(success.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>
            <div class="w-full min-h-screen ">
                <main>
                    <div class="w-full h-screen flex items-start px-10 py-10">
                        <div class="w-[25%] flex h-screen flex-col items-start">
                            <div class="flex items-center gap-2">
                                <h3>sort by</h3>
                                <form action="/shop">
                                    <select class="border-[1px] px-2 py-1" name="sortby" id="">
                                        <option value="popular">Popular</option>
                                        <option value="newest">Newest</option>
                                    </select>
                                </form>
                            </div>
                            <div class="flex flex-col mt-20">
                                <a class="block w-fit mb-2" href="">New Collection</a>
                                <a class="block w-fit mb-2" href="">All Products</a>
                                <a class="block w-fit mb-2" href="">Discounted Products</a>
                            </div>
                            <div class="mt-32">
                                <a class="block w-fit mb-2" href="">Filter by :</a>
                                <a class="block w-fit mb-2" href="">Availability</a>
                                <a class="block w-fit mb-2" href="">Discount</a>
                            </div>
                        </div>
                        <div class="w-[75%] flex flex-col gap-5 h-screen">
                            <div class="grid grid-cols-4 gap-5">
                                <% products.forEach(function(product){ %>
                                    <div class="w-60 rounded-t-xl shadow ">
                                        <div
                                            class="w-full rounded-t-xl shadow h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                                            <img class="h-[12rem]"
                                                src="data:image/png;base64,<%= product.image.toString('base64') %>"
                                                alt="">
                                        </div>
                                        <div
                                            class="flex justify-between rounded-b-xl bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                                            <div>
                                                <h3>
                                                    <%= product.name %>
                                                </h3>
                                                <h4>â‚¹ <%= product.price %>
                                                </h4>
                                            </div>
                                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
                                                href="/addtocart/<%= product._id %>">
                                                <i class="ri-add-line"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <%- include('./partials/footer') %>