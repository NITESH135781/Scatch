<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cart • Your Store</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    // Tailwind config (optional fonts & container)
    tailwind.config = {
      theme: {
        extend: {
          container: { center: true, padding: "1rem" },
          fontFamily: { display: ["Inter", "ui-sans-serif", "system-ui"], body: ["Inter", "ui-sans-serif", "system-ui"] },
          boxShadow: { soft: "0 10px 25px -10px rgba(0,0,0,0.15)" },
        },
      },
      darkMode: ["class"],
    };
  </script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bg-gray-50 text-gray-900 font-body selection:bg-gray-900 selection:text-white">
  <%- include('./partials/header') %>
    <% if(success.length>0){ %>
      <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
          <%= success %>
        </span>
      </div>
      <% } %>
        <!-- Main -->
        <div class="w-full min-h-screen ">
          <main class="container max-w-7xl flex-1 py-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
              <!-- Cart Items -->
              <section class="lg:col-span-2">
                <div class="mb-4 flex items-center justify-between">
                  <h1 class="text-2xl md:text-3xl font-semibold">Your Cart</h1>
                  <p class="text-sm text-gray-500"><span id="itemCount">
                      <%= user.cart.length %>
                    </span> items</p>
                </div>

                <div class="space-y-4" id="cartList">
                  <!-- Item Template -->
                  <% user.cart.forEach(function(item){ %>
                    <article class="cart-item bg-white rounded-2xl border border-gray-200 p-4 shadow-soft"
                      data-price="1499" data-qty="1">
                      <div class="flex items-start gap-4">
                        <img src="data:image/jpg;base64, <%= item.image.toString('base64') %>" alt="bag"
                          class="w-28 h-28 p-2 object-fit rounded-xl border border-gray-200" />

                        <div class="flex-1 min-w-0">
                          <div class="flex items-start justify-between gap-3">
                            <div>
                              <h3 class="font-medium truncate">
                                <%= item.name %>
                              </h3>
                              <p class="text-sm text-gray-500"></p>
                            </div>
                            <a href="/removetocart/<%= item._id %>"
                              class="remove text-sm text-red-600 hover:underline">Remove</a>
                          </div>

                          <div class="mt-3 flex flex-wrap items-center gap-3">
                            <div class="flex items-center rounded-xl border border-gray-200 overflow-hidden">
                              <button class="dec px-3 py-1.5">−</button>
                              <input class="qty w-12 text-center py-1.5 outline-none" type="number" min="1" value="1" />
                              <button class="inc px-3 py-1.5">+</button>
                            </div>
                            <button class="rounded-xl border border-gray-200 px-3 py-1.5 text-sm hover:bg-gray-50">Save
                              for
                              later</button>
                          </div>
                        </div>
                      </div>
                      <div class="mt-3 flex items-center justify-between text-sm">
                        <span class="text-gray-500">Price</span>
                        <span class="font-medium">₹<span class="unit">
                            <%= item.price %>
                          </span></span>
                      </div>
                      <div class="mt-1 flex items-center justify-between text-sm">
                        <span class="text-gray-500">Discount</span>
                        <span class="font-semibold">₹<span class="line">
                            <%= item.discount %>
                          </span></span>
                      </div>
                      <div class="mt-1 flex items-center justify-between text-sm">
                        <span class="text-gray-500">Final Price</span>
                        <% let bill=Number(item.price) - Number(item.discount) %>
                          <span class="font-semibold">₹<span class="line">
                              <%= bill %>
                            </span></span>
                      </div>
                    </article>
                    <% } ) %>

                </div>

                <!-- Continue Shopping -->
                <div class="mt-4 flex items-center justify-between">
                  <a href="/shop" class="text-sm text-gray-600 hover:underline">← Continue shopping</a>
                  <a href="/allclear" class="text-sm text-gray-500 hover:text-red-600">Clear cart</a>
                </div>
              </section>

              <!-- Summary -->
              <% if(user.cart.length> 0 ){ %>
                <aside class="lg:col-span-1  ">
                  <div class="bg-white rounded-2xl border border-gray-200 p-5 shadow-soft ">
                    <h2 class="text-lg font-semibold">Order Summary</h2>

                    <div class="mt-4 space-y-3 text-sm">
                      <div class="flex justify-between"><span class="text-gray-500">Subtotal</span><span>₹<span
                            id="subtotal"><%= subtotal %></span></span></div>
                      <div class="flex justify-between"><span class="text-gray-500">Shipping</span><span
                          id="shipping">Free</span></div>
                      <div class="flex justify-between"><span class="text-gray-500">GST (18%)</span><span>₹<span
                            id="tax"><%= gst %></span></span></div>
                      <div class="flex justify-between" id="discountRow" style="display:none"><span
                          class="text-gray-500">Discount</span><span class="text-green-600">−₹<span
                            id="discount">0</span></span></div>
                      <hr class="my-2 border-gray-200" />
                      <div class="flex justify-between text-base font-semibold"><span>Total</span><span>₹<span
                            id="total"><%= total %></span></span></div>
                    </div>

                    <form id="couponForm" class="mt-4 flex gap-2">
                      <input id="coupon" type="text" placeholder="Enter coupon (e.g., SAVE10)"
                        class="flex-1 rounded-xl border border-gray-300 px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-gray-900" />
                      <button class="rounded-xl bg-gray-900 text-white px-4 py-2 text-sm font-medium hover:bg-black"
                        type="submit">Apply</button>
                    </form>

                    <button
                      class="mt-4 w-full rounded-xl bg-gray-900 text-white py-3 font-medium hover:bg-black">Proceed to
                      Checkout</button>
                    <p class="mt-2 text-[13px] text-gray-500">By placing your order, you agree to our Terms and
                      Privacy
                      Policy.
                    </p>
                  </div>
                </aside>
              <%} %>
            </div>
          </main>
         
        </div>
 <%- include('./partials/footer') %>
</body>

</html>