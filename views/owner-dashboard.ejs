<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scatch-Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen">

  <!-- Navbar -->
  <div class="flex justify-between items-center p-4 border-b bg-white shadow-sm">
    <h1 class="text-2xl font-bold text-gray-800">Scatch-Admin</h1>
    <div class="flex items-center space-x-6">
      <a href="/logout" class="text-red-500 font-medium">Logout</a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex">

    <!-- Sidebar -->
    <div class="w-64 min-h-screen bg-white shadow-md p-6 space-y-6">
      <div class="flex items-center space-x-2 text-gray-700 cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <a href="/owners/create"><span>Create New Product</span></a>
      </div>

      <div class="flex items-center space-x-2 text-red-500 cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 0a1 1 0 00-1 1v1h6V4a1 1 0 00-1-1m-4 0h4" />
        </svg>
        <a href="/allclear"><span>Delete All</span></a> 
      </div>
    </div>

    <!-- Products Section -->
    <div>
      <div class="flex-1 p-6 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% products.forEach(function(product){ %>
          <div class="rounded-xl shadow overflow-hidden bg-white">

            <!-- Product Image -->
            <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
              <img class="h-48 object-contain" src="data:image/png;base64,<%= product.image.toString('base64') %>"
                alt="">
            </div>

            <!-- Product Info -->
            <div
              class="flex justify-between items-center px-4 py-3 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
              <div>
                <h3 class="font-semibold">
                  <%= product.name %>
                </h3>
                <h4 class="text-sm">â‚¹ <%= product.price %>
                </h4>
              </div>
              
            </div>

          </div>
          <% }) %>

      </div>
    </div>

  </div>
</body>

</html>